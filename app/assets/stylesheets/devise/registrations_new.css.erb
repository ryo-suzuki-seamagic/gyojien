.sign-up-main {
  height: 100vh;
  width: 100vw;
  padding-top: 50px;
  text-align: center;
  background-image: url("<%=asset_path('sign-up.jpg')%>");
  background-size:cover;
}

.form-box{
  width: 70%;
  margin:50px auto 0 auto; 
  opacity: 0.7;
  background-color: white;
  position: relative;
  border-radius: 40px 40px 40px 40px;
  border: 1px solid black;

}

.sign-up-title{
  font-size:40px;
  color:#000066;
  margin:20px;
}

.field{
  height:70px;
}

