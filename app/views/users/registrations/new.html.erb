<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
    <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_area :nickname, placeholder:"ニックネーム", maxlength:"15" %>
    </div>
    <div class="field">
    <%= f.label :location %><br />
    <%= f.text_area :location, placeholder:"都道府県", maxlength: "15" %>
    </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

    <div class="field">
    <%= f.label "苗字" %><br />
    <%= f.text_area :first_name, placeholder:"苗字", maxlength:"10" %>
  </div>
  <div class="field">
    <%= f.label "名前" %><br />
    <%= f.text_area :last_name, placeholder:"名前", maxlength:"10" %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
