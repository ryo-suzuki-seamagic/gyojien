<%= render "shared/header" ,class:'header'%>

<div class="header-speace">
</div>

<div class="recipe-main">
   

  <div class="fishcatch-form">
    <%= form_with model: @recipe, url: recipe_index_path , local: true do |f| %>
    <h2 class="fishcatch-title">レシピ投稿</h2>
      <%= f.file_field :image, id:"recipe-image", class:"fishcatch-image"%>
      <%= f.text_field :title, class:"input", id:"title", placeholder:"タイトル"%>
      <%= f.text_field :fishname, class:"input", id:"fishname", placeholder:"例)アジ・サバ" %>
      <%= f.text_area :text, class:"fishcatch-text", id:"text" %>
       <%= f.submit "投稿する" ,class:"sell-btn" %>
    <% end %>
  </div>


  
</div>